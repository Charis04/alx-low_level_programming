## Variables
CC = gcc		# Compiler
SRC = main.c school.c   # Source files
OBJ = $(SRC:.c=.o)	# Generate object files automatically
NAME = school		# Executable

# Build Executable
all: ${NAME}

## Rule
${NAME}: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

%.O: %.C
	${CC} -c $< -o $@

# Remove all Emacs and Vim temporary files along with the executable
clean:
	rm -f *~ ${NAME}

# Remove all object files
oclean:
	rm -f $(OBJ)

# Remove all Emacs and Vim temporary files, the executable, and the object files
fclean:
	rm -f *~ ${NAME}
	rm -f ${OBJ}

# Forces recompilation of all source files
re: oclean all
